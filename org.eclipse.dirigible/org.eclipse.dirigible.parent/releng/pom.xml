<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.dirigible</groupId>
		<artifactId>org.eclipse.dirigible.parent</artifactId>
		<version>2.0.150424</version>
		<relativePath>../pom.xml</relativePath>
	</parent>


	<groupId>org.eclipse.dirigible.releng</groupId>
	<artifactId>org.eclipse.dirigible.releng.parent</artifactId>
	<packaging>pom</packaging>
	<url>http://www.dirigible.io</url>

	<organization>
		<name>SAP AG</name>
		<url>http://www.sap.com</url>
	</organization>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<finalName>${deployment.name}</finalName>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<resolver>p2</resolver>
					<pomDependencies>consider</pomDependencies>
					<ignoreTychoRepositories>true</ignoreTychoRepositories>
					<target>
						<artifact>
							<groupId>org.eclipse.dirigible.platform</groupId>
							<artifactId>org.eclipse.dirigible.platform.target</artifactId>
							<version>2.0.150424</version>
							<classifier>org.eclipse.dirigible.platform.base</classifier>
						</artifact>
					</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
          			<packagingExcludes>**/*.source_*.jar</packagingExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>${basedir}/src/${deployment.type}/web.xml</webXml>
					<failOnMissingWebXml>true</failOnMissingWebXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<deployment.type>tomcat</deployment.type>
				<deployment.name>${project.name}-${project.version}</deployment.name>
			</properties>
		</profile>
		<profile>
			<id>trial</id>
			<properties>
				<deployment.type>trial</deployment.type>
				<deployment.name>dirigible</deployment.name>
			</properties>
		</profile>
		<profile>
			<id>sap</id>
			<properties>
				<deployment.type>sap</deployment.type>
				<deployment.name>dirigible</deployment.name>
			</properties>
		</profile>
	</profiles>
	<modules>
		<module>runtime.tomcat</module>
		<module>all.tomcat</module>
	</modules>
</project>